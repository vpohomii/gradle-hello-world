pipeline {
    agent { 
        label'agentVM1'
    } 
    
    tool name: 'gradle4', type: 'gradle'
    stages {
        stage("checkout") {
            steps{
                checkout scm
            }
        }
        stage("build") {
            steps {
            sh "gradle clean build"
            }
        }
    }
    post {
        success {
            addBadge(icon: 'completed.gif', test: "Success" )
        }

        failure {
            addBadge(icon: 'error.gif', text: 'Failure')
        }

    }
}
